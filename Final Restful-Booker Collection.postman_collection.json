		{
			"name": "Create Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Save token into variable to pass it to other of tests\r",
							"var jsonData = pm.response.json();\r",
							"var loginToken = jsonData.token;\r",
							"\r",
							"// Set token to environment to let other tests access it\r",
							"pm.environment.set(\"loginToken\", loginToken)\r",
							"\r",
							"pm.test(\"Validate that status code  is 200\", function(){\r",
							"    pm.response.to.have.status(200);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
